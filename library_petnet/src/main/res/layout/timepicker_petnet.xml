<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/mdtp_white"
    >

    <RelativeLayout
        android:id="@+id/nameHeaderLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAllCaps="true"
            android:id="@+id/nameTextView"
            android:layout_alignBottom="@+id/nameEditText"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="8dp"
            style="@style/mdtp_time_label_small"
            android:textColor="@color/mdtp_date_picker_month_day_dark_theme"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameEditText"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nameTextView"
            android:ems="8"
            android:textColor="@color/mdtp_date_picker_month_day_dark_theme"
            android:gravity="center"
            android:backgroundTint="@color/mdtp_date_picker_month_day_dark_theme"

            />
    </RelativeLayout>


    <com.wdullaer.materialdatetimepicker.time.TimePickerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_below="@+id/nameHeaderLayout"
        android:layout_alignStart="@+id/nameHeaderLayout"
        >

    </com.wdullaer.materialdatetimepicker.time.TimePickerView>

</RelativeLayout>